@model ICONEXT.Models.Positions

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <h1>Edit Position</h1>
</div>

   
    

        <div class="col-md-4">
            <hr />
            <div class="row">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ID" />
                    <div class="form-group">
                        <label asp-for="Position" class="control-label"></label>
                        <input asp-for="Position" autocomplete="off" class="form-control" />
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" autocomplete="off" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <div class="row">
                            <div class="text-center">

                                <input type="submit" value="Save" class="btn btn-primary" style="width: 10rem;" />

                            </div>
                            &nbsp;&nbsp;
                            <div class="text-center">
                                <div class="btn btn-danger text-center" style="width: 9rem;">
                                    <a asp-action="Index">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>


    

