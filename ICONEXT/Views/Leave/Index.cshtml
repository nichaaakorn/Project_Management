@using ICONEXT;
@model IEnumerable<ICONEXT.Models.JoinEmployee_Leave>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    IEnumerable<JoinEmployee_Leave> displaydata = ViewData["Results"] as IEnumerable<JoinEmployee_Leave>;
}


<h1>TEST database</h1>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Name</th>
        <th>Surname</th>
        <th>Nickname</th>
        <th>StartDate</th>
        <th>EndDate</th>
        <th>note</th>
        <th>Days</th>

    </tr>
    @foreach (var item in displaydata)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Title</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.Nickname</td>
            <td>@item.StartDate</td>
            <td>@item.EndDate</td>
            <td>@item.note</td>
            <td>@item.Days</td>

        </tr>
    }

</table>





