@using ICONEXT;
@model ICONEXT.Models.JoinEmployee_Leave

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    IEnumerable<JoinEmployee_Leave> displaydata = ViewData["Results"] as IEnumerable<JoinEmployee_Leave>;
}

<h1> Test Leave </h1>
<br>


<table class="table">
    <thead>
        <tr>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Annotation
            </th>
            <th>
                Number of Days
            </th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in displaydata)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.note)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Days)
                </td>

