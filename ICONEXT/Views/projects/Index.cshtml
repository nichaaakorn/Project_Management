@model IEnumerable<ICONEXT.Models.project>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    @foreach (var item in Model)

    {

        <div class="text-center">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    @Html.DisplayFor(modelItem => item.Name)
                </div>

                <div class="text-center">
                    <div class="btn btn-primary text-center" style="width: 5rem;">
                        <a asp-action="ViewProject" asp-route-id="@item.ProjID">Edit</a>
                    </div>
                </div>
                <br>
                <div>
                    Start Date :  @Html.DisplayFor(modelItem => item.StartDate)
                </div>
            </div>



            <!-------------------------------menu dropdown------------------------------------->


            <div class="text-right">
                <div class="dropdown">
                    <!--Trigger-->
                    <a type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-three-dots-vertical" fill="currentColor"
                             xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                                  d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" />
                        </svg>
                    </a>
                    <!--Menu-->
                    <div class="dropdown-menu dropdown-primary">
                        <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.ProjID">Edit</a>
                        <a class="dropdown-item" asp-action="Details" asp-route-id="@item.ProjID">Details</a>
                        <a class="dropdown-item" asp-action="Delete" asp-route-id="@item.ProjID">Delete</a>

                    </div>



                </div>
            </div> &nbsp;&nbsp;&nbsp;&nbsp;

            <br>
        </div>


    }
</div>

   

<div class="text-center">
    <div class="btn btn-success text-center" style="width: 12rem;">
        <a asp-action="Create">Create New Project</a>
    </div>
</div>